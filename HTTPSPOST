rgb_lcd lcd;
// ********************************************
// ****** START user defined definitions ******
// ********************************************
#define WIFI_SSID                       "WIFI-NAME"
#define WIFI_PASSWORD                   "WIFI-PASSWORD"
// ******************************************
// ****** END user defined definitions ******
// ******************************************

//#define DELAY 60000

